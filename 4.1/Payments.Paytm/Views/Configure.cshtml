@model Nop.Plugin.Payments.Paytm.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="PaymentPaytm" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantId" asp-input="MerchantId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MerchantId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantId" />
                        <span asp-validation-for="MerchantId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantKey" asp-input="MerchantKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MerchantKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantKey" />
                        <span asp-validation-for="MerchantKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Website" asp-input="Website" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Website" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Website" />
                        <span asp-validation-for="Website"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IndustryTypeId" asp-input="IndustryTypeId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IndustryTypeId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IndustryTypeId" />
                        <span asp-validation-for="IndustryTypeId"></span>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PaymentUrl" asp-input="PaymentUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="PaymentUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PaymentUrl" />
                        <span asp-validation-for="PaymentUrl"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TxnStatusUrl" asp-input="TxnStatusUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TxnStatusUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TxnStatusUrl" />
                        <span asp-validation-for="TxnStatusUrl"></span>
                    </div>
                </div>*@

                <div class="form-group">
                    <div class=" col-md-3">
                        <div class="label-wrapper">
                            <label class="control-label" for="Environment">Environment</label>
                            <div title="Select Environment" data-toggle="tooltip" class="ico-help">

                                <i class="fa fa-question-circle"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownListFor(m => m.env, new List<SelectListItem>

                    {
                   new SelectListItem{Text="Staging",Value="Stage"},
                       new SelectListItem{Text="Production",Value="Prod"}

                   }, new { @class = "form-control text-box single-line" })


                    </div>

                </div>

                <div class="form-group" hidden="hidden">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="CallBackUrl" asp-input="CallBackUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="CallBackUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CallBackUrl" />
                        <span asp-validation-for="CallBackUrl"></span>
                    </div>
                </div>
                <div class="form-group" hidden="hidden">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UseDefaultCallBack" asp-input="UseDefaultCallBack" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="UseDefaultCallBack" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseDefaultCallBack" />
                        <span asp-validation-for="UseDefaultCallBack"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="text-center"><p>Last Updated: 22 Nov 2018</p><p>Nop Commerce Version: 4.10</p></div>
            </div>
        </div>
    </div>
</form>